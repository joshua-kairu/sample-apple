<?xml version="1.0" encoding="utf-8"?>

<!-- card for a course -->

<android.support.v7.widget.CardView

    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"

    >

    <RelativeLayout

        android:layout_width="match_parent"

        android:layout_height="match_parent"

        >

        <!-- image of course intro video -->

        <com.joslittho.sampler.view.SixteenNineImageView

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:src="@drawable/course_two_intro_video_image"

            android:contentDescription="@null"

            android:id="@+id/course_item_iv_video_intro"

            />

        <!-- title for the course -->

        <TextView

            android:layout_marginTop="24dp"

            android:paddingStart="@dimen/layout_padding"

            android:paddingEnd="@dimen/layout_padding"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:id="@+id/course_item_tv_title"

            android:layout_below="@id/course_item_iv_video_intro"

            android:text="@string/course_title"

            style="@style/TextAppearance.AppCompat.Headline"

            />

        <!-- text for the course -->

        <TextView

            android:layout_marginTop="@dimen/layout_padding"

            android:paddingStart="@dimen/layout_padding"

            android:paddingEnd="@dimen/layout_padding"

            android:layout_below="@id/course_item_tv_title"

            android:layout_width="match_parent"

            android:layout_height="wrap_content"

            android:id="@+id/course_item_tv_text"

            android:text="@string/course_intro"

            style="@style/TextAppearance.AppCompat.Body1"

            />

        <!-- text for course type -->

        <TextView

            android:layout_marginTop="@dimen/layout_padding"

            android:layout_marginStart="@dimen/layout_padding"

            android:layout_below="@id/course_item_tv_text"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:id="@+id/course_item_tv_course_type"

            android:text="@string/course_public"

            style="@style/Base.TextAppearance.AppCompat.Body1"

            android:textStyle="bold"

            />

        <!-- divider -->

        <View

            android:layout_marginTop="@dimen/layout_padding"

            android:layout_below="@id/course_item_tv_course_type"

            android:layout_width="match_parent"

            android:layout_height="1dp"

            android:id="@+id/course_item_v_divider"

            android:background="@android:color/darker_gray"

            />

        <!-- image button for bookmark -->

        <ImageButton

            android:padding="@dimen/space_between_content_areas"

            android:layout_alignParentEnd="true"

            android:layout_below="@id/course_item_v_divider"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:contentDescription="@null"

            app:srcCompat="@drawable/ic_bookmark_black_24dp"

            android:background="@android:color/transparent"

            android:id="@+id/home_ib_favorite"

            />

        <!-- image button for favorite -->

        <ImageButton

            android:padding="@dimen/space_between_content_areas"

            android:layout_toStartOf="@id/home_ib_favorite"

            android:layout_below="@id/course_item_v_divider"

            android:layout_width="wrap_content"

            android:layout_height="wrap_content"

            android:contentDescription="@null"

            app:srcCompat="@drawable/ic_favorite_black_24dp"

            android:background="@android:color/transparent"

            />

    </RelativeLayout>

</android.support.v7.widget.CardView>